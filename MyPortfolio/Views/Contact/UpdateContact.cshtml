@model MyPortfolio.Models.TblContacts
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h2>İletişim Güncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" name="ContactId" value="@Model.ContactId" />
    <label>AdSoyad</label>
    <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" />
    <br />
    <label>Adres</label>
    <input type="text" name="Title" value="@Model.Address" class="form-control" />
    <br />
    <label>Telefon</label>
    <input type="text" name="Description" value="@Model.Phone " class="form-control" />
    <br />
    <label>Email</label>
    <input type="text" name="Email" value="@Model.Email " class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>

</form>